.b-header
	background-color #FFF
	box-shadow 0 2px 3px rgba(0, 1, 3, 0.15)
	padding-top 40px
	padding-bottom 28px
	display none
	@media screen and (min-width 760px)
		display block
	&_mobile
		&~.b-content
				padding-top 75px !important
		@media screen and (min-width 760px)
			display none
			&~.b-content
				padding-top 34px !important
		display block
		position fixed
		z-index 9
		top 0
		left 0
		width 100%
		padding 15px 0
		
	&__logo
		sprite($logo)
		float left
		// img replacement
		text-indent: -9999px;
		&_small
			sprite($logo_small)
			display inline-block
			vertical-align middle
			margin-left 23px
			float none
	&__tell
		font-size 12px
		color #767676
		display block
		margin 0 auto
		width 150px
		margin-top -5px
		&>.number
			text-decoration none
			color #343434
			font-weight 700
			display block
			font-size 18px
			margin-bottom 5px
			background none
	&__user
		display inline-block
		vertical-align top
		width 270px
		margin-top -3px
		float right
		&>.links
			font-size 12px
			margin-top 8px
	&__menu
		position relative
		display inline-block
		vertical-align middle
		sprite($menu)
		cursor pointer
		&_toggler
			position absolute
			top 50px
			padding 25px 0
			background-color #fff
			left 0
			z-index 3
			width 100%
			box-shadow 0 2px 3px rgba(0, 1, 3, 0.15)
			font-size 18px
			display none
			& li
				padding 0 10px
				display block
				margin-bottom 5px
				text-align center
	&__login-link
		float right
		sprite($login-link)

.b-main-nav
	font-size 0
	margin-top 37px
	clearfix()
	&__el
		display inline-block
		vertical-align middle
		height 34px
		line-height 34px
		font-size 16px
		text-decoration underline
		margin-right 20px
		padding 0 9px
		&:last-child
			margin-right 0
		&.curr
			padding 0 9px
			width 108px
			height 34px
			background-color rgb(52, 52, 52)
			background-image linear-gradient(to top, rgb(65, 133, 217) 0%, rgb(116, 175, 242) 100%)
			border 1px solid rgb(47, 112, 192)
			border-radius 3px
			box-shadow inset 0 1px 2px rgba(255, 255, 255, 0.92)
			line-height 32px
			text-decoration none
			&>span
				background-image none
				color #fff
				font-family "Open Sans"
				font-size 18px
				font-weight 600
				text-shadow 0 1px 0 rgba(0, 1, 3, .32)
				white-space nowrap
			&:hover
				background none rgb(116, 175, 242)
				box-shadow none

.b-sort
	font-size 14px
	font-weight normal
	position absolute
	bottom 0
	@media screen and (min-width 760px)
		bottom 8px
	right 0
	padding-right 12px
	& i
		display none
		@media screen and (min-width 760px)
			display inline-block
	&__toggler
		cursor pointer
		color #ff6000
		border-bottom 1px dotted
		position relative
		display none
		@media screen and (min-width 760px)
			display inline-block
		&_small
			display inline-block
			@media screen and (min-width 760px)
				display none
		&:after
			display inline-block
			position absolute
			top 10px
			right -12px
			sprite($arrow_down)
			content ''
	&__dropdown
		position absolute
		width 100px
		padding 5px 10px
		color #ff6000
		background-color #F9F9F9
		right 0
		top 100%
		box-shadow 0 1px 2px rgba(0,0,0,.5)
		display none
	&__link
		display block
		cursor pointer
		margin-bottom 4px
		color #ff6000
		&_disabled
			cursor default
			color #888
			text-decoration none