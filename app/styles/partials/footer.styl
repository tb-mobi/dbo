.b-footer
	padding-top 15px
	border-top 1px solid #b7b7b7
	padding-bottom 18px
	background-color #f9f9f9
	box-shadow 0 5px 15px rgba(0, 1, 3, 0.12)
	width 100%
	max-width 1400px
	margin 0 auto
	display none
	@media screen and (min-width 760px)
		display block
	&_mobile
		& .b-footer__menu
			float none
			text-align left
			display block
			margin-right 0
			@media screen and (min-width 480px)
				margin-right 125px
			line-height 24px
			margin-bottom 20px
		@media screen and (min-width 760px)
			display none
		display block
	&__copy
		float left
		color #343434
		font-size 14px
		font-weight 400
	&__tell
		float none
		margin-bottom 20px
		@media screen and (min-width 480px)
			float right
			margin-bottom 0
		color #343434
		font-family "Open Sans"
		font-size 14px
		font-weight 700
		text-decoration none
		&:hover
			color #343434
			text-decoration none
	&__menu
		text-align center
		margin 0 auto
		width auto
		text-align center
		@media screen and (min-width 980px)
			width 470px

	&__link
		font-size 14px
		display inline-block
		vertical-align middle
		margin-right 20px
		&:last-child
			margin-right 0