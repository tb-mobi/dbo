body,html
	height 100%
body
	background-color #e1e1e1
	font-family 'Open Sans', sans-serif
	font-size 14px
	color #343434
	line-height 1.25
.b-page
	background-color #f9f9f9
	box-shadow 0 5px 15px rgba(0, 1, 3, 0.12)
	width 100%
	max-width 1400px
	margin 0 auto
	min-height 95%
	padding-bottom 45px
.h-wrap
	margin 0 auto
	width 94.73684210526316%
	clearfix()
	&_left
		@media screen and (min-width 760px)
			width 492px
			float left
		@media screen and (min-width 980px)
			width 620px
		@media screen and (min-width 1400px)
			width 820px
	&_right
		@media screen and (min-width 760px)
			width 210px
			float right
		@media screen and (min-width 980px)
			width 250px
		@media screen and (min-width 1400px)
			width 290px
	@media screen and (min-width 980px)
		width 940px
	@media screen and (min-width 1400px)
		width 1340px
strong
	font-weight 700

a
	color #FF6000
	text-decoration underline
	&:hover
		text-decoration none
	&.line
		text-decoration none
		color rgb(255, 96, 0)
		background linear-gradient(left,rgba(255, 96, 0,.3),rgba(255, 96, 0,.3) 100%)
		background-position 0 100%
		background-size 10px 1px
		background-repeat repeat-x
		&:hover
			background-image none
	&.red
		color #F03030
	&.enter
		margin-left 31px
		text-decoration none
		& span
			background linear-gradient(left,rgba(240, 48, 48,.3),rgba(240, 48, 48,.3) 100%)
			background-position 0 100%
			background-size 10px 1px
			background-repeat repeat-x
		&:hover span
			background-image none
		&:before
			content ''
			display inline-block
			vertical-align middle
			sprite($exit)
			margin-right 4px
	&.gray
		color #767676
		text-decoration none
h1
	color #343434
	font-size 18px
	position relative
	@media screen and (min-width 480px)
		font-size 24px
	@media screen and (min-width 760px)
		font-size 36px
	font-weight 600
	margin-bottom 18px
h2
	color #FFF
	font-size 18px
	margin-bottom 21px
	@media screen and (min-width 480px)
		font-size 24px
	font-weight 600
h3
	color #343434
	font-size 18px
	font-weight 700
	margin-bottom 10px
.btn
	padding 0 18px
	color #FFF
	font-size 18px
	font-weight 600
	text-shadow 0 1px 0 rgba(0, 1, 3, 0.32)
	height 40px
	background-color #343434
	background-image linear-gradient(to top, #E0995E 0%, #F5CF87 100%)
	border 1px solid #FF8E4A
	border-radius 3px
	box-shadow inset 0 1px 2px rgba(255, 255, 255, 0.92)
	cursor pointer
	&:hover
		background-image linear-gradient(to top, #F5CF87 0%, #E0995E 100%)
	&:active
		box-shadow none
		background none #e0995e
		position relative
		top 1px
		left 1px
		color rgba(255,255,255,.8)
.clr
	clearfix()