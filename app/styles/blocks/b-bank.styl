.b-bank
	background-color #F9F9F9
	border 1px solid #D0D0D0
	border-radius 10px
	padding 10px 18px 10px 18px
	margin-bottom 37px
	margin-top 10px
	overflow hidden
	&_type
		padding-top 0
	&__body
		display none
		&.open
			display block
	&__toggler
		font-size 14px
		padding-top 11px
		width 100%
		box-sizing content-box
		margin-left -18px
		padding 8px 18px
		border-top 1px solid #d9d9d9
		margin-top 14px
		padding-bottom 0
		& span
			cursor pointer
			color #ff6000
			border-bottom 1px dotted
			position relative
			&:after
				width: 0;
				height: 0;
				border-style: solid;
				border-width: 4px 3.5px 0 3.5px;
				border-color: #343434 transparent transparent transparent;
				content ''
				display inline-block
				position absolute
				right -11px
				top 50%
				margin-top -2px
		&.open span:after
			width: 0;
			height: 0;
			border-style: solid;
			border-width: 0 3.5px 4px 3.5px;
			border-color: transparent transparent #343434 transparent;
	&__hdr
		display table-row
		vertical-align middle
		width 100%
		margin 0
		padding 0
	&__logo
		display table-cell
		vertical-align middle
		white-space nowrap
		font-size 30px
	&__summ
		display table-cell
		vertical-align middle
		font-size 12px
		@media screen and (min-width 760px)
			font-size 18px
		text-align right
		width 100%
	&__total
		font-size 18px
		@media screen and (min-width 760px)
			font-size 24px
		font-weight 600
		& i
			font-weight normal
			font-style normal
	&__wrap
		width 100%
		box-sizing content-box
		margin-left -18px
		padding 20px 18px
		padding-bottom 16px
		border-top 1px solid #D9D9D9
		position relative
		font-size 0
		&:nth-of-type(odd)
			background-color #f5e7d7
	&__acc-name
		display inline-block
		vertical-align top
		font-size 10px
		width 200px
		@media screen and (min-width 480px)
			width 140px
		@media screen and (min-width 760px)
			width 180px
		@media screen and (min-width 980px)
			width 235px
		@media screen and (min-width 1400px)
			width 320px
	&__name
		color #FF6000
		font-size 14px
		@media screen and (min-width 760px)
			font-size 18px
		font-weight 400
		cursor pointer
		padding-right 12px
		position relative
		margin-bottom 10px
		& input
			width 100%
			font-size 14px
			padding 4px 10px
		&:after
			sprite($pencil)
			content ''
			position absolute
			top 5px
			margin-left 10px
			@media screen and (min-width 760px)
				display inline-block
			display none
		& span 
			border-bottom 1px dotted
	&__card
		margin-bottom 6px
	&__type
		display none
		@media screen and (min-width 480px)
			display inline-block
			vertical-align top
			width 170px
		@media screen and (min-width 760px)
			width 190px
		@media screen and (min-width 980px)
			width 250px
		font-size 12px
		&_number
			font-size 14px
		&_role
			margin-bottom 8px
			margin-top 2px
	&__small-number
		display inline-block
		font-size 14px
		margin-left 3px
		color #343434
		@media screen and (min-width 480px)
			display none
	&__hide
		display block
		@media screen and (min-width 760px)
			display none
	&__show
		display none
		@media screen and (min-width 760px)
			display block
	&__acc-summ
		position absolute
		right 18px
		z-index 1
		font-size 14px
		@media screen and (min-width 480px)
			float right
			position static
		@media screen and (min-width 760px)
			font-size 18px
		color #343434
		font-weight 600
		text-align right
		&>i
			font-size 15px
			@media screen and (min-width 760px)
				font-size 19px
			font-weight normal
		&_convert
			font-size 10px
			@media screen and (min-width 760px)
				font-size 14px
			font-weight 700
			color #767676
			&>i
				font-weight normal

.visa
	sprite($visa)
	display inline-block
	margin-left 5px
.mc
	sprite($mc)
	display inline-block
	margin-left 5px

.b-card
	display inline-block
	margin-right 15px
	vertical-align top
	margin-bottom 5px
	font-size 0
	margin-top 7px
	&__number
		width 36px
		height 22px
		background-color #FFF
		border 1px solid #e19c60
		border-radius 3px
		text-align center
		text-align center
		line-height 22px
		font-size 12px
		display inline-block
		vertical-align top
	&__type
		display inline-block
		margin-left 5px
		vertical-align top
		&_v
			sprite($visa2)
		&_mc
			sprite($mc2)
.b-bank_type__total
	text-align right
	margin-top -20px
	font-size 18px
	& i
		font-size 24px
		font-weight normal
	& span
		font-size 24px
		font-weight 600