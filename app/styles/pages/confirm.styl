.confirm {

	&-section {
		width: 480px;
		padding: 25px 10px;
		background-color: #fff;
		// for &:before & &:after
		position: relative;

		&:before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 6px;
			background: url('../images/confirm-list-pattern.png') repeat-x;
		}

		&:after {
			content: '';
			position: absolute;
			bottom: 0;
			left: 0;
			width: 100%;
			height: 6px;
			background: url('../images/confirm-list-pattern-bottom.png') repeat-x;
		}
	}

	&-sms {
		max-width: 360px;
		min-width: 300px;
	}

	&-item {
		display: flex;
		padding: 13px 0;
		border-bottom: 1px solid #e2e2e2;

		&:last-child {
			border-bottom: none;
		}
	}

	&-name,
	&-value {
		font-size: 14px;
	}

	&-name {
		// for after
		position: relative;
		color: #767676;
		padding-left: 7px;
		min-width: 36.17021276595745%;
		overflow: hidden;
		white-space: nowrap;
		float: left;

		&:after {
			content: '';
			position: absolute;
			top: 0;
			right: 0;
			width: 20px;
			height: 100%;
			background: linear-gradient(to right,  rgba(255,255,255,0) 0%,rgba(255,255,255,1) 100%);
		}
	}

	&-value {
		color: #343434;
		position: relative;
		overflow: hidden;
		white-space: nowrap;
		width: 100% - 36.17021276595745%;
		float: left;

		&:after {
			content: '';
			position: absolute;
			top: 0;
			right: 0;
			width: 25px;
			height: 100px;
			background: linear-gradient(to right,  rgba(255,255,255,0) 0%,rgba(255,255,255,1) 100%);
		}
	}

	@media screen and (max-width: 480px) {
		&-name {
			padding-bottom: 13px;
			padding-left: 0;
			width: 100%;
		}

		&-item {
			flex-wrap: wrap;
		}
	}
}

.confirm-sms {
	margin-left: 14.28571428571429%;

	&-box {
		background-color: #f9f9f9;
		width: 360px;
		height: 120px;
		border-radius: 9px;
		border: 1px solid #b7b7b7;
		padding: 20px;
	}

}

.sms-box-pass {
	width: 140px;
	height: 40px;
	background-color: #fff;
	border: 1px solid #b7b7b7;
	border-radius: 4px;
	padding: 0 14px;
	font-size: 24px;
	box-shadow: inset 3px 3px 4px #eee;
}

.sms-box-title {
	font-weight: 400;
}

.sms-box-getpass {
	display: inline-block;
	font-size: 14px;
	text-decoration: none;
	border-bottom: 1px dashed;


	&:hover,
	&:active,
	&:focus {
		border-bottom: 1px dashed transparent;
	}
}

.sms-box-inputs {
	display: flex;
	justify-content: space-between;
	margin-top: 19px;
}

.confirm-sms-alert {
	color: #343434;
	font-size: 12px;
	line-height: 18px;
	padding-left: 80px;
	position: relative;
	margin-top: 95px;

	&:before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 65px;
		height: 65px;
		background: url(../images/alert.png) no-repeat;
	}
}


@media screen and (max-width: 1400px) {

	.confirm-sms {
		margin-left: 4.28571428571429%;
	}
}

@media screen and (max-width: 940px) {

	.confirm-sms {
		margin-left: 0;
		margin-top: 35px;
		width: 100%;
		min-width auto
	}

	.confirm-sms-alert {
		width: 340px;
		margin-top: 50px;
	}
}

@media screen and (max-width: 510px) {

	.confirm-section {
		width: 100%;
	}

}

@media screen and (max-width: 390px) {

	.confirm-sms-box {
		width: 225px;
		height: 190px;
		margin: 0 auto;
	}

	.confirm-value {
		width: 100%;
	}

	.sms-box-inputs {
		flex-direction: column;
		align-items: center;
	}

	.sms-box-pass {
		margin-bottom: 20px;
	}

	.confirm-sms-alert {
		width: 100%;
	}
}

